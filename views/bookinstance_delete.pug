extends layout

block content
  h1 #{title}: #{bookinstance.book.name}
  hr
  if bookinstance.status=='Available'
    p.text-success #{bookinstance.status}
  else if bookinstance.status=='Maintenance'
    p.text-danger #{bookinstance.status}
  else
    p.text-warning #{bookinstance.status} 
  p #[strong Imprint:] #{bookinstance.imprint}
  if bookinstance.status!='Available'
    p #[strong Due back:] #{bookinstance.due_back}
  p #[strong Id:] 
    a(href=bookinstance.url) #{bookinstance._id}

  p Do you really want to delete this book instance?
  
  form(method='POST' action='')
    div.form-group
      input#authorid.form-control(type='hidden',name='id', required='true', value=bookinstance._id )

    button.btn.btn-primary(type='submit') Delete